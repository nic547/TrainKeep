<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TkMobile.ItemOverviews.LocomotiveOverviewList">
    <ContentPage.Content>
        <ListView
            HasUnevenRows="True"
            x:Name="LocoList">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout> 
                            <Label Text="{Binding VisibleName}"/>
                            <Label Text="{Binding ItemOverview}"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
            </ListView>
    </ContentPage.Content>
</ContentPage>