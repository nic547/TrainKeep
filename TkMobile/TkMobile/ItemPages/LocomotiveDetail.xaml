<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TkMobile.ItemPages.LocomotiveDetail">
    <TableView Intent="Data">
        <TableSection>
            <ViewCell>
                <Image x:Name="Image"/>
            </ViewCell>
            <EntryCell Label="Name" Text="{Binding Name}"></EntryCell>
            <ViewCell>
                <Picker x:Name="ClassPicker" Title="Prototype" ItemDisplayBinding="{Binding Name}"></Picker></ViewCell>
            <ViewCell>
                <Picker x:Name="ModelPicker" Title="Model"></Picker>
            </ViewCell>
        </TableSection>
    </TableView>
</ContentPage>